extends layout 

block content 
  form(method='POST', action='')
    div
      label(for='category_name') Name:
      input#name(type='text' name='name' required='true' value=(category===undefined ? '' : category.name))
    div 
      label(for='description') Description: 
      input#description(type='text' name='description' value=(category===undefined ? '' : category.description))
    div 
      button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg