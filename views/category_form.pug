extends layout 

block content 
  form(method='POST', action='')
    div
      label(for='category_name') Name:
      input#category_name(type='text' name='category_name')
    div 
      label(for='category_description') Description: 
      input#category_description(type='text' name='category_description')
    div 
      button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg